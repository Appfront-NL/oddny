  }

  .source-body :global(h2) {
    font-size: 28px;
    font-weight: 500;
    margin: 2em 0 1em 0;
  }

  .related-sources {
    background: #f8f8f8;
    padding: 60px 0;
  }

  .related-sources h2 {
    max-width: var(--content-max-width);
    margin: 0 auto 40px;
    padding: 0 var(--content-padding);
    font-size: 28px;
    font-weight: 500;
    color: #42383e;
  }

