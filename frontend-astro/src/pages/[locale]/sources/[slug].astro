    width: 400px;
    height: 300px;
    border-radius: 10px;
    overflow: hidden;
    flex-shrink: 0;
  }

  .source-hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .source-content {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding) 60px;
  }

  .source-body {
    max-width: 800px;
    font-size: 18px;
    line-height: 1.8;
    color: #42383e;
  }

