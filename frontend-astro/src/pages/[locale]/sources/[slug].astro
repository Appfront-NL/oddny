    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #00FC26;
    margin-bottom: 16px;
  }

  .source-title {
    font-size: 48px;
    font-weight: 500;
    line-height: 1.1;
    color: #42383e;
    margin: 0 0 24px 0;
  }

  .source-description {
    font-size: 20px;
    line-height: 1.6;
    color: #888484;
    margin: 0;
  }

