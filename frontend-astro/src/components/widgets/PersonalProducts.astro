---
import { client, readItems, getAssetUrl, type Locale, defaultLocale } from '../../lib/directus';
import { setAttr } from '../../lib/directus';

interface Props {
  block: any;
  locale?: Locale;
}

const { block, locale = defaultLocale } = Astro.props;

const getLocalizedField = (item: any, field: string) => {
  return item[`${field}_${locale}`] || item[`${field}_en`] || item[field] || '';
};

const stripHtml = (html: string) => {
  if (!html) return '';
  return html.replace(/<[^>]*>/g, '');
};

const products = await client.request(
  readItems('products', {
    filter: {
      status: { _eq: 'published' },
      is_personal: { _eq: true }
    },
    fields: ['*'],
    sort: ['sort'],
    limit: 6
  })
) as any[];

const title = getLocalizedField(block, 'heading') || 'Popular Bundles';
---

<section 
  class="personal-products-section"
  data-directus={setAttr({ collection: 'blocks', item: block.id, mode: 'drawer' })}
>
  <div class="personal-products-container">
    <h2 
      class="personal-products-title"
      data-directus={setAttr({ collection: 'blocks', item: block.id, fields: [`heading_${locale}`], mode: 'popover' })}
    >
      {title}
    </h2>
    
    <div class="personal-products-grid">
      {products.map((product) => (
        <a 
          href={`/${locale}/products/${product.slug || product.id}`} 
          class="personal-product-card"
          data-directus={setAttr({ collection: 'products', item: product.id, fields: ['title_en', 'title_nl', 'description_en', 'description_nl', 'featured_image'], mode: 'popover' })}
        >
          {product.featured_image && (
            <div class="personal-product-image">
              <img src={getAssetUrl(product.featured_image)} alt={getLocalizedField(product, 'title')} />
            </div>
          )}
          <div class="personal-product-content">
            <h3 class="personal-product-title">{getLocalizedField(product, 'title')}</h3>
            <p class="personal-product-description">{stripHtml(getLocalizedField(product, 'description'))}</p>
          </div>
          <div class="personal-product-arrow">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .personal-products-section {
    width: 100%;
    background-color: rgba(217, 217, 217, 0.72);
    padding: 50px 0 60px;
    font-family: 'Neue Haas Grotesk Display Pro', sans-serif;
  }

  .personal-products-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .personal-products-title {
    font-size: 36px;
    font-weight: 500;
    color: #42383e;
    margin: 0 0 40px 0;
  }

  .personal-products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .personal-product-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .personal-product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .personal-product-image {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: #f5f5f5;
  }

  .personal-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .personal-product-content {
    padding: 20px;
    flex: 1;
  }

  .personal-product-title {
    font-size: 20px;
    font-weight: 500;
    color: #42383e;
    margin: 0 0 8px 0;
  }

  .personal-product-description {
    font-size: 14px;
    font-weight: 400;
    color: #888484;
    margin: 0;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .personal-product-arrow {
    padding: 0 20px 20px;
    display: flex;
    justify-content: flex-end;
  }

  .personal-product-arrow svg {
    width: 24px;
    height: 24px;
    color: #42383e;
    transition: transform 0.2s ease;
  }

  .personal-product-card:hover .personal-product-arrow svg {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .personal-products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .personal-products-section {
      padding: 40px 0 50px;
    }

    .personal-products-title {
      font-size: 28px;
      margin-bottom: 24px;
    }

    .personal-products-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .personal-product-title {
      font-size: 18px;
    }
  }
</style>
