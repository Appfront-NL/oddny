---
import { client, readItems, getAssetUrl } from '../../lib/directus';

interface Props {
  block: any;
  locale: string;
  getImageUrl: (id: string) => string;
  setAttr: (opts: any) => string;
}

const { block, locale, getImageUrl, setAttr } = Astro.props;

const getLocalizedField = (item: any, fieldName: string) => {
  return item[`${fieldName}_${locale}`] || item[`${fieldName}_en`] || item[fieldName] || '';
};

const heading = getLocalizedField(block, 'heading');

const defaultImages = [
  '/images/hero-jumping.png',
  '/images/oddny-bird-pink.png',
  '/images/oddny-benefits.png',
  '/images/card-1.png'
];
const getRandomImage = (id: number) => defaultImages[id % defaultImages.length];

const getImageSrc = (item: any) => {
  if (!item.featured_image) return getRandomImage(item.id);
  if (item.featured_image.startsWith('/')) return item.featured_image;
  return getAssetUrl(item.featured_image);
};

const marketplaceItems = await client.request(
  readItems('marketplace_items', {
    filter: { status: { _eq: 'published' } },
    fields: ['*'],
    sort: ['sort'],
    limit: 6
  })
) as any[];
---

<section 
  class="marketplace-collection-section"
  data-directus={setAttr({ collection: 'blocks', item: block.id, mode: 'drawer' })}
>
  <div class="marketplace-container">
    <h2 
      class="marketplace-title"
      data-directus={setAttr({ collection: 'blocks', item: block.id, fields: [`heading_${locale}`], mode: 'popover' })}
    >
      {heading || (locale === 'nl' ? 'Diensten & Pakketten' : 'Services & Packages')}
    </h2>
    
    <div class="marketplace-grid">
      {marketplaceItems.map((item) => (
        <a href={item.external_url || `/${locale}/marketplace/${item.slug}`} class="marketplace-card">
          <div class="marketplace-image">
            <img src={getImageSrc(item)} alt={getLocalizedField(item, 'title')} loading="lazy" />
          </div>
          <div class="marketplace-content">
            <span class="marketplace-category">{item.category}</span>
            <h3 class="marketplace-item-title">{getLocalizedField(item, 'title')}</h3>
            <p class="marketplace-description">{getLocalizedField(item, 'description')}</p>
            <div class="marketplace-footer">
              <span class="marketplace-price">
                {locale === 'nl' ? 'Vanaf' : 'From'} {item.currency}{item.price_from}
              </span>
              <span class="marketplace-cta">
                {locale === 'nl' ? 'Bekijk' : 'View'}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .marketplace-collection-section {
    position: relative;
    width: 100%;
    background: white;
    font-family: 'Neue Haas Grotesk Display Pro', sans-serif;
    padding: 60px 0;
  }

  .marketplace-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .marketplace-title {
    font-weight: 500;
    font-size: 28px;
    line-height: 32px;
    color: #42383e;
    margin: 0 0 40px 0;
  }

  .marketplace-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .marketplace-card {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 10px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .marketplace-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .marketplace-image {
    width: 100%;
    height: 140px;
    overflow: hidden;
    background: linear-gradient(135deg, #00FC26 0%, #00d4aa 100%);
  }

  .marketplace-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .marketplace-content {
    padding: 20px;
  }

  .marketplace-category {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    background: #42383e;
    padding: 4px 8px;
    border-radius: 4px;
    margin-bottom: 12px;
  }

  .marketplace-item-title {
    font-weight: 500;
    font-size: 20px;
    line-height: 24px;
    color: #42383e;
    margin: 0 0 8px 0;
  }

  .marketplace-description {
    font-weight: 400;
    font-size: 14px;
    line-height: 20px;
    color: #888484;
    margin: 0 0 16px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .marketplace-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    border-top: 1px solid #e5e5e5;
  }

  .marketplace-price {
    font-weight: 500;
    font-size: 18px;
    color: #ff40b4;
  }

  .marketplace-cta {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 600;
    color: #ff40b4;
  }

  .marketplace-cta svg {
    transition: transform 0.2s;
  }

  .marketplace-card:hover .marketplace-cta svg {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .marketplace-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .marketplace-collection-section {
      padding: 40px 0;
    }
    .marketplace-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
