---
import { getNews, PUBLIC_DIRECTUS_URL } from '../../lib/directus';
import RelatedArticles from './RelatedArticles.astro';

interface Props {
  block: any;
  locale: string;
}

const { block, locale } = Astro.props;
const newsItems = await getNews('published');
const directusUrl = PUBLIC_DIRECTUS_URL;
const relatedArticles = newsItems.slice(0, 6).map((item: any) => ({ ...item, collection: 'news' }));

function getImageUrl(image: any) {
  if (!image) return '/images/7e155a058b2f08a228fca03af573b81922e39990.png';
  if (typeof image === 'string') {
    if (image.startsWith('/')) return image;
    return `${directusUrl}/assets/${image}`;
  }
  return `${directusUrl}/assets/${image.id}`;
}
---

<section class="news-grid-widget">
  <div class="news-grid-container">
    {newsItems.length === 0 ? (
      <p class="no-results">{locale === 'nl' ? 'Nog geen nieuws gepubliceerd.' : 'No news published yet.'}</p>
    ) : (
      <div class="results-grid">
        {newsItems.map((item: any, index: number) => {
          const title = item[`title_${locale}`] || item.title_nl || item.title_en;
          const intro = item[`intro_${locale}`] || item.intro_nl || item.intro_en;
          const imageUrl = item.featured_image ? getImageUrl(item.featured_image) : `/images/${index % 3 === 0 ? '7e155a058b2f08a228fca03af573b81922e39990' : index % 3 === 1 ? 'a68bee1ed41d916baeacb8282ff859fc0a335b75' : '0c59031718f023dc2a1306f1c3f4a839a4d90a93'}.png`;
          
          return (
            <a href={`/${locale}/news/${item.slug}`} class="result-card">
              <div class="result-image">
                <img src={imageUrl} alt={title} />
              </div>
              <div class="result-content">
                {item.category && <span class="result-type">{item.category}</span>}
                <h3 class="result-title">{title}</h3>
                {intro && <p class="result-excerpt">{intro}</p>}
              </div>
            </a>
          );
        })}
      </div>
    )}
  </div>
  
  {newsItems.length > 0 && (
    <RelatedArticles articles={relatedArticles} locale={locale} limit={6} />
  )}
</section>

<style>
  .news-grid-widget {
    font-family: 'Neue Haas Grotesk Display Pro', sans-serif;
    background: white;
  }

  .news-grid-container {
    max-width: var(--content-max-width, 1400px);
    margin: 0 auto;
    padding: 0 var(--content-padding, 80px) 80px;
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .result-card {
    text-decoration: none;
    display: block;
  }

  .result-image {
    width: 100%;
    height: 350px;
    border-radius: 10px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .result-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .result-card:hover .result-image img {
    transform: scale(1.05);
  }

  .result-content {
    padding: 0;
  }

  .result-type {
    display: inline-block;
    font-size: 12px;
    font-weight: 500;
    color: #888484;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
  }

  .result-title {
    font-size: 28px;
    font-weight: 500;
    line-height: 32px;
    color: #42383e;
    margin: 0 0 12px 0;
  }

  .result-excerpt {
    font-size: 16px;
    font-weight: 300;
    line-height: 22px;
    color: #888484;
    margin: 0;
  }

  .no-results {
    font-size: 18px;
    color: #888484;
    text-align: center;
    padding: 60px 0;
  }

  @media (max-width: 1200px) {
    .news-grid-container {
      padding: 0 var(--content-padding, 20px) 60px;
    }

    .results-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .results-grid {
      grid-template-columns: 1fr;
    }

    .result-image {
      height: 250px;
    }
  }
</style>
