---
import { client, readItems, getAssetUrl } from '../../lib/directus';

interface Props {
  block: any;
  locale: string;
  getImageUrl: (id: string) => string;
  setAttr: (opts: any) => string;
}

const { block, locale, getImageUrl, setAttr } = Astro.props;

const getLocalizedField = (item: any, fieldName: string) => {
  return item[`${fieldName}_${locale}`] || item[`${fieldName}_en`] || item[fieldName] || '';
};

const heading = getLocalizedField(block, 'heading');

const defaultImages = [
  '/images/hero-jumping.png',
  '/images/oddny-bird-pink.png',
  '/images/oddny-benefits.png',
  '/images/card-1.png'
];
const getRandomImage = (id: number) => defaultImages[id % defaultImages.length];

const getImageSrc = (item: any) => {
  if (!item.featured_image) return getRandomImage(item.id);
  if (item.featured_image.startsWith('/')) return item.featured_image;
  return getAssetUrl(item.featured_image);
};

const otherProducts = await client.request(
  readItems('other_products', {
    filter: { status: { _eq: 'published' } },
    fields: ['*'],
    sort: ['sort'],
    limit: 12
  })
) as any[];

const categories = [...new Set(otherProducts.map(p => p.category))];
---

<section 
  class="other-products-section"
  data-directus={setAttr({ collection: 'blocks', item: block.id, mode: 'drawer' })}
>
  <div class="other-products-container">
    <h2 
      class="other-products-title"
      data-directus={setAttr({ collection: 'blocks', item: block.id, fields: [`heading_${locale}`], mode: 'popover' })}
    >
      {heading || (locale === 'nl' ? 'Andere Producten' : 'Other Products')}
    </h2>

    <div class="category-filters">
      <button class="filter-btn active" data-filter="all">
        {locale === 'nl' ? 'Alles' : 'All'}
      </button>
      {categories.map((cat) => (
        <button class="filter-btn" data-filter={cat}>{cat}</button>
      ))}
    </div>
    
    <div class="other-products-grid">
      {otherProducts.map((item) => (
        <a href={item.external_url || `/${locale}/other-products/${item.slug}`} class="product-card" data-category={item.category}>
          <div class="product-image">
            <img src={getImageSrc(item)} alt={getLocalizedField(item, 'title')} loading="lazy" />
            <span class="product-category">{item.category}</span>
          </div>
          <div class="product-content">
            <h3 class="product-title">{getLocalizedField(item, 'title')}</h3>
            <p class="product-description">{getLocalizedField(item, 'description')}</p>
            <div class="product-footer">
              <span class="product-price">
                {locale === 'nl' ? 'Vanaf' : 'From'} {item.currency}{item.price_from}
              </span>
              <span class="product-cta">
                {locale === 'nl' ? 'Bekijk' : 'View'}
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none">
                  <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter;
      
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      document.querySelectorAll('.product-card').forEach(card => {
        const category = (card as HTMLElement).dataset.category;
        if (filter === 'all' || category === filter) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .other-products-section {
    position: relative;
    width: 100%;
    background: white;
    font-family: 'Neue Haas Grotesk Display Pro', sans-serif;
    padding: 60px 0;
  }

  .other-products-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .other-products-title {
    font-weight: 500;
    font-size: 28px;
    line-height: 32px;
    color: #42383e;
    margin: 0 0 30px 0;
  }

  .category-filters {
    display: flex;
    gap: 12px;
    margin-bottom: 40px;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 10px 20px;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    background: white;
    font-size: 14px;
    font-weight: 500;
    color: #42383e;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
  }

  .filter-btn:hover {
    border-color: #42383e;
  }

  .filter-btn.active {
    background: #42383e;
    color: white;
    border-color: #42383e;
  }

  .other-products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  .product-card {
    background: white;
    border: 1px solid #e5e5e5;
    border-radius: 10px;
    overflow: hidden;
    text-decoration: none;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .product-image {
    position: relative;
    width: 100%;
    height: 140px;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-category {
    position: absolute;
    top: 12px;
    right: 12px;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: white;
    background: rgba(0, 0, 0, 0.5);
    padding: 4px 8px;
    border-radius: 4px;
  }

  .product-content {
    padding: 16px;
  }

  .product-title {
    font-weight: 500;
    font-size: 16px;
    line-height: 20px;
    color: #42383e;
    margin: 0 0 8px 0;
  }

  .product-description {
    font-weight: 400;
    font-size: 13px;
    line-height: 18px;
    color: #888484;
    margin: 0 0 12px 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 12px;
    border-top: 1px solid #e5e5e5;
  }

  .product-price {
    font-weight: 500;
    font-size: 16px;
    color: #ff40b4;
  }

  .product-cta {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 12px;
    font-weight: 600;
    color: #ff40b4;
  }

  .product-cta svg {
    transition: transform 0.2s;
  }

  .product-card:hover .product-cta svg {
    transform: translateX(4px);
  }

  @media (max-width: 1200px) {
    .other-products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 900px) {
    .other-products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .other-products-section {
      padding: 40px 0;
    }
    .other-products-grid {
      grid-template-columns: 1fr;
    }
    .category-filters {
      overflow-x: auto;
      flex-wrap: nowrap;
      padding-bottom: 10px;
    }
    .filter-btn {
      flex-shrink: 0;
    }
  }
</style>
