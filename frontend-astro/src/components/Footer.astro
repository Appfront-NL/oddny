---
import { getSiteSettings, getNavigationItems, getAssetUrl, type NavigationItem, type SiteSettings, type Locale, defaultLocale } from '../lib/directus';

interface Props {
  locale?: Locale;
}

const { locale = defaultLocale } = Astro.props;

const settings = await getSiteSettings();
const navItems = await getNavigationItems('header');

function getItemUrl(item: NavigationItem): string {
  if (item.url) return `/${locale}${item.url}`;
  if (item.page) return `/${locale}/${item.page.slug}`;
  return '#';
}

function getItemLabel(item: NavigationItem): string {
  const localizedLabel = locale === 'nl' ? item.label_nl : item.label_en;
  return localizedLabel || item.label || '';
}

// Helper to get localized field
const getLocalized = (fieldPrefix: string) => {
  const field = `${fieldPrefix}_${locale}` as keyof typeof settings;
  return settings?.[field] || settings?.[`${fieldPrefix}_en` as keyof typeof settings] || '';
};

// Group navigation items for footer columns (skip first one which is newsletter)
const footerNavGroups = navItems.filter(item => item.children && item.children.length > 0);
